<Window x:Class="TravelPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelPlanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <TextBox x:Name="CitySearch" Text="{Binding ElementName=CitySearch, Path=Text}" Background="Azure"  Height="55"/>
            <Button x:Name="ButtonOK" Click="OKButton_Click">Search</Button>
            <ListBox x:Name="lb1" SelectionChanged="lb1_SelectionChanged"/>
        </StackPanel>
    </Grid>
</Window>
